{
  "name": "pomodoro-timer-alex",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron.cjs",
  "description": "Pomodoro Timer por Alex Quilis Vila",
  "author": "Alex Quilis Vila",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "electron:build": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "electron": "^32.2.6",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "vite": "^5.4.2"
  },
  "build": {
    "appId": "com.alexquilis.pomodoro",
    "productName": "Pomodoro Timer",
    "artifactName": "Pomodoro-Timer-${os}-${version}.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron.cjs",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "compression": "maximum"
    },
    "nsis": {
      "artifactName": "Pomodoro-Timer-Setup-${version}.exe",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Pomodoro Timer"
    },
    "portable": {
      "artifactName": "Pomodoro-Timer-Portable-${version}.zip"
    }
  }
}